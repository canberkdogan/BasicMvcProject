@using BasicMvcProject.ViewModel
@model CustomerOrderViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container  my-4">

    <div class="mb-4 text-center">
        <h1 class="display-4">@Model.Customer.FirstName @Model.Customer.LastName</h1>
        <h4 class=" text-muted">@Model.Customer.Email</h4>
    </div>


    <h3 class="mb-4 text-center">Sipariş Listesi</h3>
    <div class=" table-responsive">
        <table class="table table-striped table-bordered ">
            <thead class="thead-dark">
                <tr>
                    <th>Ürün Adı</th>
                    <th>Ürün Fiyatı</th>
                    <th>Adet</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Orders)
                {
                    <tr>
                        <td>@item.ProductName</td>
                        <td>@item.Price</td>
                        <td>@item.Quantity</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
